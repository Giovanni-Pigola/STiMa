<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.giovanni.tcc.NFCtesteActivity">

    <Button
        android:id="@+id/NFCbuttonID"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="0dp"
        android:text="Button" />

    <TextView
        android:id="@+id/NFCtituloID"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/NFCbuttonID"
        android:layout_alignLeft="@+id/NFCbuttonID"
        android:layout_alignStart="@+id/NFCbuttonID"
        android:layout_marginBottom="55dp"
        android:paddingTop="15dp"
        android:text="NFC teste"
        android:textAlignment="center"
        android:textSize="24sp" />
</RelativeLayout>
