<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="25dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="5dp"
    tools:context="com.example.giovanni.tcc.HomeActivity">

    <TextView
        android:id="@+id/nomeFuncionarioId"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/profileID"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/profileID"
        android:layout_toRightOf="@+id/profileID"
        android:text="@string/sampleNameEmpl"
        android:textAlignment="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/areaFuncionarioId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileID"
        android:layout_alignLeft="@+id/nomeFuncionarioId"
        android:layout_alignStart="@+id/nomeFuncionarioId"
        android:text="@string/sampleTextDepto" />

    <ImageView
        android:id="@+id/profileID"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_above="@+id/gridLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp"
        app:srcCompat="@drawable/blank_profile" />

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:columnCount="2">

        <ImageView
            android:id="@+id/airConditioningId"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="52dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@+id/lightId"
            android:layout_toStartOf="@+id/lightId"
            app:srcCompat="@drawable/air_conditioning" />

        <ImageView
            android:id="@+id/lightId"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/airConditioningId"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/light_bulb" />

        <ImageView
            android:id="@+id/calendarId"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/airConditioningId"
            android:layout_alignStart="@+id/airConditioningId"
            android:layout_below="@+id/airConditioningId"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:srcCompat="@drawable/calendar" />

        <ImageView
            android:id="@+id/heatMapId"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/lightId"
            android:layout_alignStart="@+id/lightId"
            android:layout_alignTop="@+id/calendarId"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:srcCompat="@drawable/heat_map" />
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/gridLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:layout_row="0"
            app:srcCompat="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/localizacaoStatusID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Lugar Placeholder"
            android:textColor="@color/textColorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />
    </GridLayout>

</RelativeLayout>
