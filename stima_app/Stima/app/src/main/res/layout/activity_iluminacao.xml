<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="25dp"
    tools:context="com.example.giovanni.tcc.IluminacaoActivity">

    <GridLayout
        android:layout_width="330dp"
        android:layout_height="300dp"
        android:columnCount="3"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/light_bulb" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/light_bulb" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/light_bulb" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/light_bulb" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/light_bulb" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/light_bulb" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/light_bulb" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/light_bulb" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/light_bulb" />
    </GridLayout>

    <Switch
        android:id="@+id/lightSwitchID"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout"
        android:layout_below="@+id/lightDimmerID"
        android:layout_marginTop="26dp"
        android:text="Interruptor" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tituloLuz"
        android:textAlignment="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <SeekBar
        android:id="@+id/lightDimmerID"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="5"
        android:progress="0"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/applyID"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/lightSwitchID"
        android:background="@color/colorPrimaryDark"
        android:text="Aplicar"
        android:textColor="@color/textColorPrimary"
        android:textStyle="bold" />

</RelativeLayout>
